<h2>Events needing review</h2>

<h2>Events needing review</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Author</th>
      <th>Organizer name</th>
      <th>Audience</th>
      <th>Visibility radius</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><span<%= raw " style='color: red'" if not event.shown? %>><%= event.title %></span></td>
        <td><%= event.event_type %></td>
        <td><%= event.user.name if event.user %></td>
        <td><%= event.organizer_name if event.user.nil? or (event.organizer_name != event.user.name) %></td>
        <td><%= event.audience_type + ": " + event.location_size.to_s %></td>
				<td><%= event.travel_distance %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

